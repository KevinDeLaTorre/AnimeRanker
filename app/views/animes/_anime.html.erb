<div class="card mb-3">
  <div class="card-header"><strong><%= anime.title %></strong></div>

  <div class="card-body">
    <p><%= anime.description %></p>
    <%= link_to "Edit", edit_anime_path(anime.id), class: "btn btn-sm btn-primary" %>
    <%= link_to "Delete", animes_path(anime), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
  </div>
</div>
