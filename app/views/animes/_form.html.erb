<%= form_with( model: @anime, local: true ) do |f| %>
  <%= render 'devise/shared/error_messages', resource: @anime %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :description, class: 'mt-3' %>
  <%= f.text_area :description, placeholder: "Enter description", class: 'form-control' %>

  <div class="mt-3">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% if params[:id].present? %>
      <%= link_to "Back", anime_path(@anime), class: "btn btn-outline-secondary" %>
    <% else %>
      <%= link_to "Back", animes_path, class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
<% end %>
